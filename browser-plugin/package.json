{
  "name": "livekit-browser-extension",
  "displayName": "LiveKit Browser Extension",
  "version": "1.0.0",
  "description": "Injected LiveKit interface for real-time voice and video communication",
  "author": "daverbj",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@livekit/components-react": "^2.9.9",
    "jose": "^6.0.12",
    "livekit-client": "^2.13.3",
    "lucide-react": "^0.542.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "tailwindcss": "3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "host_permissions": [
      "https://*/*",
      "http://localhost/*",
      "ws://localhost/*"
    ],
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "scripting"
    ],
    "action": {
      "default_title": "Open LiveKit Interface"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
  }
}
